@model Arac
@{
    ViewData["Title"] = Model.Marka + " " + Model.Modeli + " " + Model.KasaTipi;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/Img/Cars/@Model.Resim1" alt="..."></div>
            <div class="col-md-6">
                <div class="small mb-1"></div>
                <h1 class="display-5 fw-bolder">@ViewData["Title"]</h1>
                <div class="fs-5">
                    <span>Fiyatı : @Model.Fiyati ₺</span>
                </div>
                <div class="fs-5">
                    <span>Renk : @Model.Renk</span>
                </div>
                <div class="fs-5">
                    <span>Model Yılı : @Model.ModelYili</span>
                </div>
                <p class="lead">
                    @Model.Notlar
                </p>
                <div class="d-flex">
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Bilgi Al
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>